    private void tablaTotalProductosMouseClicked(java.awt.event.MouseEvent evt) {
        int filaSeleccionada = tablaTotalProductos.getSelectedRow();
        if (filaSeleccionada >= 0) {
            id.setText(tablaTotalProductos.getValueAt(filaSeleccionada, 0).toString());
            nombre.setText(tablaTotalProductos.getValueAt(filaSeleccionada, 1).toString());
            fabricante.setText(tablaTotalProductos.getValueAt(filaSeleccionada, 2).toString());
            precio.setText(tablaTotalProductos.getValueAt(filaSeleccionada, 3).toString());
        }
    }

