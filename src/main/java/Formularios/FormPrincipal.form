    private void btnExplorarActionPerformed(java.awt.event.ActionEvent evt) {
        JFileChooser archivo = new JFileChooser();
        int ventana = archivo.showOpenDialog(null);
        if (ventana == JFileChooser.APPROVE_OPTION) {
            archivoSeleccionado = archivo.getSelectedFile();
            txtRuta.setText(String.valueOf(archivoSeleccionado));
            try {
                lblimagen.setIcon(new ImageIcon(ImageIO.read(archivoSeleccionado)));
            } catch (Exception ex) {
                JOptionPane.showMessageDialog(null, "Error al cargar la imagen: " + ex.getMessage());
            }
        }
    }

